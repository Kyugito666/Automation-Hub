{
  "name": "Automation-Hub Runner",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },

  // === PERUBAHAN: Tambahkan postAttachCommand ===
  // Ini akan menjalankan first-setup.sh SETIAP KALI container start/attach
  // Mirip dengan postCreate tapi lebih konsisten, jalan juga pas resume.
  "postAttachCommand": "bash ./.devcontainer/post-attach.sh",
  // === AKHIR PERUBAHAN ===

  // Hapus postCreateCommand lama jika ada
  // "postCreateCommand": "sudo apt-get update && sudo apt-get install -y tmux jq",

  "remoteUser": "vscode"
}
